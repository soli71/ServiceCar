@using OilChangeApp.Data
@model IEnumerable<Car>

@{
    ViewData["Title"] = "لیست خودروها";
}

<div class="container" style="direction: rtl; text-align: right;">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-success">ایجاد خودروی جدید</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">نام خودرو</th>
                <th scope="col" style="width: 150px;">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-info btn-sm">جزئیات</a>
                            <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning btn-sm">ویرایش</a>
                            <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger btn-sm">حذف</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
