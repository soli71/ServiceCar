@model IEnumerable<OilChangeApp.Data.Customer>

@{
    ViewData["Title"] = "لیست مشتریان";
}

<div class="container" style="direction: rtl; text-align: right;">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Search" method="get" class="form-inline mb-3">
        <div class="form-group mx-sm-3">
            <input type="text" name="searchString" class="form-control" placeholder="جستجوی مشتری..." />
        </div>
        <button type="submit" class="btn btn-primary">جستجو</button>
        <a asp-action="Create" class="btn btn-success ml-2">ثبت مشتری جدید</a>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">نام</th>
                <th scope="col">شماره تلفن</th>
                <th scope="col">خودرو</th>
                <th scope="col" style="width: 220px;">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.Car?.Name</td>
                    <td>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info btn-sm">سرویس</a>
                            <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning btn-sm mx-1">ویرایش</a>
                            <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger btn-sm">حذف</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
