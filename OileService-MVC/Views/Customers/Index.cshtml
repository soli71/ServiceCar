<!-- Views/Customers/Index.cshtml -->
@using OilChangeApp.Data
@model IEnumerable<Customer>

@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
}

@{
    ViewData["Title"] = "لیست مشتریان";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Index" method="get" class="form-inline mb-3">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="جستجوی مشتری..." value="@ViewData["CurrentFilter"]" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> جستجو
                </button>
            </div>
        </div>
        <a asp-action="Create" class="btn btn-success ml-2">
            <i class="fas fa-plus"></i> ثبت مشتری جدید
        </a>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">نام</th>
                <th scope="col">شماره تلفن</th>
                <th scope="col">خودرو</th>
                <th scope="col" style="width: 220px;">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.Car?.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-wrench"></i> سرویس
                            </a>
                            <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> ویرایش
                            </a>
                            <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> حذف
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
