@using OilChangeApp.Controllers
@model CreateCustomerViewModel


<div class=" col-12 col-md-10 d-flex mx-auto justify-content-center flex-column">

<form asp-action="Create" method="post">
    <h2 class="mb-4 fs-5 fw-bold border-bottom pb-2">ثبت مشتری</h2>

    <div class="form-group col-12 col-md-4" >
        <label asp-for="Name" class="font14">نام و نام خانوادگی </label>
            <input asp-for="Name" class="form-control no-box-shadow" />
        <span asp-validation-for="Name" class="text-danger font14"></span>
    </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="PhoneNumber" class="font14">شماره موبایل</label>
            <input asp-for="PhoneNumber"  class="form-control no-box-shadow" />
            <span asp-validation-for="PhoneNumber" class="text-danger font14"></span>
    </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="SelectedCarId" class="font14">انتخاب خودرو</label>
            <select asp-for="SelectedCarId" class="form-control no-box-shadow font14" style="height:40px" asp-items="Model.Cars">
            <option value="">انتخاب کنید</option>
        </select>
            <span asp-validation-for="SelectedCarId" class="text-danger font14"></span>
    </div>
        <div class="form-group col-12 col-md-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-outline-primary col-4">ثبت</button>

    </div>

</form>

        </div>