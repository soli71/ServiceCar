@using OilChangeApp.Controllers
@model CreateCustomerViewModel

<h2>ثبت مشتری</h2>

<form asp-action="Create" method="post">
    <div class="form-group" >
        <label asp-for="Name">نام و نام خانوادگی </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">شماره موبایل</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedCarId">انتخاب خودرو</label>
        <select asp-for="SelectedCarId" class="form-control" asp-items="Model.Cars">
            <option value="">انتخاب کنید</option>
        </select>
        <span asp-validation-for="SelectedCarId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">ثبت</button>
</form>
