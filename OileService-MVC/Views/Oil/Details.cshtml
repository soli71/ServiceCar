@using OilChangeApp.Data
@model Oil

@{
    ViewData["Title"] = "جزئیات روغن";
}

<div class="container" style="direction: rtl; text-align: right;">
    <h3 class="mb-4 fs-5 fw-bold border-bottom pb-3">@ViewData["Title"]</h3>

    <div>
        <div class="d-flex">
            <div class="col-sm-2">نام</div>
            <div class="col-sm-10" style="font-weight:bold">@Model.Name</div>

    
        </div>
        <div class="d-flex mt-3">
            <div class="col-sm-2">توضیحات</div>
            <div class="col-sm-10" style="font-weight:bold">@Model.Description</div>
        </div>
    </div>

    <div class="form-group col-12 col-md-4 d-flex justify-content-center mt-5">
 
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning col-4">ویرایش</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger mx-3 col-4">حذف</a>
        <a asp-action="Index" class="btn btn-outline-secondary col-4">بازگشت    </a>
    </div>
</div>
