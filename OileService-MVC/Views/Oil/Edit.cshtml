@using OilChangeApp.Data
@model Oil

@{
    ViewData["Title"] = "ویرایش روغن";
}

<div class=" col-12 col-md-10 d-flex mx-auto justify-content-center flex-column">
    <h3 class="mb-4 fs-5 fw-bold border-bottom pb-3">@ViewData["Title"]</h3>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="form-group col-12 col-md-4">
            <label asp-for="Name">نام</label>
            <input asp-for="Name" class="form-control no-box-shadow" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="Description"> نام</label>
            <textarea asp-for="Description" class="form-control no-box-shadow"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4 d-flex justify-content-center">

            <button type="submit" class="btn btn-outline-primary col-4">ذخیره تغییرات</button>
            <a asp-action="Index" class="btn btn-outline-secondary mx-3 col-4">بازگشت</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
