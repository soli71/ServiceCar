@page "/register-customer"
@using OilChangeApp.Data
@inject OilChangeDbContext DbContext

<h3>Register Customer</h3>

<EditForm Model="customer" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Name:</label>
        <InputText @bind-value="customer.Name" />
    </div>
    <div>
        <label>Phone Number:</label>
        <InputText @bind-value="customer.PhoneNumber" />
    </div>
    <div>
        <label>Car Model:</label>
        @* <InputText @bind-value="customer.CarModel" /> *@
    </div>
    <button type="submit">Register</button>
</EditForm>

@code {
    private Customer customer = new Customer();

    private async Task HandleValidSubmit()
    {
        DbContext.Customers.Add(customer);
        await DbContext.SaveChangesAsync();
        customer = new Customer(); // Clear form after submission
    }
}
